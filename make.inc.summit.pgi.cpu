MAKE = make
COMPILER = pgi
F90 = mpifort
F90SERIAL = pgfortran
CXX = mpic++
CC = mpicc

# This is where mpi.mod resides
MPIMOD_PATH = ${OLCF_SPECTRUM_MPI_ROOT}/lib/PGI

# For some reason IBM Spectrum MPI depends on libpthreads and libatomic
# which are located at GCC's OpenMP libraries directory
# Make sure to source summit-gccpaths.sh
GCCOMP_PATH = ${OLCF_GCC_ROOT}/lib64

